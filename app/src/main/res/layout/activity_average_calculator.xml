<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.strobertchs.edussentials.AverageCalculator">

    <TextView
        android:id="@+id/textview_markinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Grade Before"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textview_weightfactor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textview_markinput"
        android:gravity="center_horizontal"
        android:text="Assessment Weight"
        android:textSize="30sp"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/textview_desiregrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_below="@+id/textview_weightfactor"
        android:layout_centerHorizontal="true"
        android:text="Desired Grade"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/dialogbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_weightfactor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:inputType="numberDecimal"
        android:text="Open Dialog" />

    <EditText
        android:id="@+id/TotalMarkID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="Mark you need on Assessment" />

    <TextView
        android:id="@+id/textview_desiregrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_weightfactor"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        tools:text="Desired Grade" />

</RelativeLayout>
